<style type="text/css">
    #accountForm {
        margin-top: 15px;
    }
</style>

<ul class="nav nav-tabs">
  <li class="active">
    <a href="#list-tab" id="list-tab-link" data-toggle="tab">List <i class="fa"></i></a>
  </li>
  <li>
    <a href="#create-tab" data-toggle="tab">Create <i class="fa"></i></a>
  </li>
  <li>
    <a href="#read-tab" id="read-tab-link" data-toggle="tab">Read <i class="fa"></i></a>
  </li>
  <li>
    <a href="#update-tab" id="update-tab-link" data-toggle="tab">Update <i class="fa"></i></a>
  </li>
  <li>
    <a href="#delete-tab"  id="delete-tab-link" data-toggle="tab">Delete <i class="fa"></i></a>
  </li>
</ul>

<%= form_for(:sample, remote: true, html: {class:['form-horizontal', 'create-sample'],}) do |f| %>
    <div class="tab-content">
      <div class="tab-pane active" id="list-tab">
        <table class="table">
          <thead>
          <tr>
            <th>名前</th>
            <th>電話番号</th>
          </tr>
          </thead>
          <tbody>
            <% @samples.each do |sample| %>
              <%= render 'sample', sample: sample%>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="tab-pane" id="create-tab">
        <div class="form-group">
          <%= f.label '名前', class:'col-xs-3 control-label' %>
          <div class="col-xs-5">
            <%= f.text_field :name, class:'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label '電話番号', class:'col-xs-3 control-label' %>
          <div class="col-xs-5">
            <%= f.text_field :phone_number, class:'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-xs-5 col-xs-offset-3">
            <%= f.submit '登録', class:'btn btn-default' %>
          </div>
        </div>
      </div>

      <div class="tab-pane" id="read-tab">
        <div class="form-group">
          <label class="col-xs-3 control-label">名前</label>
          <div class="col-xs-5">
            <input id="show-fullname" type="text" class="form-control" name="fullName" />
          </div>
        </div>

        <div class="form-group">
          <label class="col-xs-3 control-label">電話番号</label>
          <div class="col-xs-5">
            <input id="show-fullname" type="text" class="form-control" name="fullName" />
          </div>
        </div>
      </div>

      <div class="tab-pane" id="update-tab">
        <div class="form-group">
          <label class="col-xs-3 control-label">名前</label>
          <div class="col-xs-5">
            <input id="update-fullname" type="text" class="form-control" name="fullName" />
          </div>
        </div>

        <div class="form-group">
          <label class="col-xs-3 control-label">電話番号</label>
          <div class="col-xs-5">
            <input id="show-fullname" type="text" class="form-control" name="fullName" />
          </div>
        </div>

        <div class="form-group">
          <div class="col-xs-5 col-xs-offset-3">
            <%= link_to '更新', sample_path(@samples[0]), method: :put, class:'btn btn-default' %>
          </div>
        </div>
      </div>

      <div class="tab-pane" id="delete-tab">
        <div class="form-group">
          <label class="col-xs-3 control-label">名前</label>
          <div class="col-xs-5">
            <input id="delete-fullname" type="text" class="form-control" name="fullName" />
          </div>
        </div>

        <div class="form-group">
          <label class="col-xs-3 control-label">電話番号</label>
          <div class="col-xs-5">
            <input id="show-fullname" type="text" class="form-control" name="fullName" />
          </div>
        </div>

        <div class="form-group">
          <div class="col-xs-5 col-xs-offset-3">
            <%= link_to '削除', sample_path(@samples[0]), method: :put, class:'btn btn-default', data: {confirm: '削除します'} %>
          </div>
        </div>
      </div>
    </div>
<% end %>
