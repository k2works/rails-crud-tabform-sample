<h1>Sample#index</h1>

<style type="text/css">
    #accountForm {
        margin-top: 15px;
    }
</style>

<ul class="nav nav-tabs">
  <li class="active">
    <a href="#list-tab" data-toggle="tab">List <i class="fa"></i></a>
  </li>
  <li>
    <a href="#create-tab" data-toggle="tab">Create <i class="fa"></i></a>
  </li>
  <li>
    <a href="#read-tab" id="read-tab-link" data-toggle="tab">Read <i class="fa"></i></a>
  </li>
  <li>
    <a href="#update-tab" id="update-tab-link" data-toggle="tab">Update <i class="fa"></i></a>
  </li>
  <li>
    <a href="#delete-tab"  id="delete-tab-link" data-toggle="tab">Delete <i class="fa"></i></a>
  </li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="list-tab">
    <table class="table">
      <thead>
      <tr>
        <th>名前</th>
      </tr>
      </thead>
      <tbody>
      <% @samples.each do |sample| %>
          <tr>
            <td><%= sample.name %></td>
            <td><%= link_to 'Show', sample, remote: true , class: 'show-sample' %></td>
            <td><%= link_to 'Edit', sample, remote: true , class: 'update-sample' %></td>
            <td><%= link_to 'Destroy', sample, remote: true , class: 'delete-sample' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="tab-pane" id="create-tab">
      <%= form_for(:sample, html:{class:'form-horizontal'}) do |f| %>
      <div class="form-group">
        <%= f.label '名前', class:'col-xs-3 control-label' %>
        <div class="col-xs-5">
          <%= f.text_field :name, class:'form-control' %>
        </div>
        <div class="col-xs-5 col-xs-offset-3">
          <%= f.submit '登録', class:'btn btn-default' %>
        </div>
      </div>
      <% end %>
  </div>

  <div class="tab-pane" id="read-tab">
    <div class="form-group">
      <label class="col-xs-3 control-label">名前</label>
      <div class="col-xs-5">
        <input id="show-fullname" type="text" class="form-control" name="fullName" />
      </div>
    </div>
  </div>

  <div class="tab-pane" id="update-tab">
    <form id="accountForm" method="post" class="form-horizontal">
      <div class="form-group">
        <label class="col-xs-3 control-label">名前</label>
        <div class="col-xs-5">
          <input id="update-fullname" type="text" class="form-control" name="fullName" />
        </div>
        <div class="col-xs-5 col-xs-offset-3">
          <button type="submit" class="btn btn-default">更新</button>
        </div>
      </div>
    </form>
  </div>

  <div class="tab-pane" id="delete-tab">
    <form id="accountForm" method="post" class="form-horizontal">
      <div class="form-group">
        <label class="col-xs-3 control-label">名前</label>
        <div class="col-xs-5">
          <input id="delete-fullname" type="text" class="form-control" name="fullName" />
        </div>
        <div class="col-xs-5 col-xs-offset-3">
          <button type="submit" class="btn btn-default">削除</button>
        </div>
      </div>
    </form>
  </div>
</div>
