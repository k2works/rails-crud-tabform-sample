<% unless notice.nil? %>
    <div class="alert alert-info alert-dismissable">
      <button class="close" data-dismiss="alert" aria-hidden="true">
        &times;</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<ul class="nav nav-tabs">
  <li>
    <%= link_to 'List', samples_path %><i class="fa"></i>
  </li>
  <li>
    <%= link_to 'Create', new_sample_path %><i class="fa"></i>
  </li>
  <li class="active">
    <a href="#read-tab" id="read-tab-link">Read <i class="fa"></i></a>
  </li>
  <li class="disabled">
    <a href="#update-tab" id="update-tab-link">Update <i class="fa"></i></a>
  </li>
</ul>
<div class="tab-content">
  <div class="tab-pane" id="list-tab">
  </div>

  <div class="tab-pane" id="create-tab">
  </div>

  <div class="tab-pane active" id="read-tab">
    <div class="row">
      <div class="form-group">
        <label class="col-xs-3 control-label">名前</label>
        <div class="col-xs-5">
          <%= @sample.name %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <label class="col-xs-3 control-label">電話番号</label>
        <div class="col-xs-5">
          <%= @sample.phone_number %>
        </div>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="update-tab">
  </div>
</div>

